
{{> slider}}

<div class="container">
    <div class="row gx-5 justify-content-center mt-5">
        {{#each dataTitles}}
            <div class="col-md-3">
                <div class="content text-center">
                    <div class="icon display-1 color-basic">
                        {{{icon}}}
                    </div>
                    <br>
                    <h2 class="titles fs-4">
                        {{text}}
                    </h2>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="row gx-5 justify-content-center mt-5">
        {{#each dataTitles2}}
        <div class="col-md-3">
            <div class="row gx-5 justify-content-center">
                <div class="col-3 display-4">
                    {{{icon}}}
                </div>
                <div class="col-8">
                    <div class="content">
                        <div class="title">
                            {{title}}
                        </div>
                        <div class="text">
                            {{text}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

